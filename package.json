{
  "name": "clai",
  "version": "0.3.0",
  "description": "Terminal chat UI powered by Claude API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "clai": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env --import=tsx src/index.tsx",
    "dev": "node --env-file=.env --import=tsx --watch src/index.tsx"
  },
  "keywords": [
    "cli",
    "chat",
    "claude",
    "ai"
  ],
  "author": "Samuel",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "chalk": "^5.6.2",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "7",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
